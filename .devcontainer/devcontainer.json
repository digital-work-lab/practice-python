{
    "name": "My Codespace",
    "image": "mcr.microsoft.com/devcontainers/python:3.8",  // You can change the Python version
    "extensions": [
        "ms-python.python",       // Python extension
        "ms-toolsai.jupyter",     // Jupyter extension
        "ms-azuretools.vscode-docker" // (Optional) Docker extension if needed
    ],
    "settings": {
        "python.pythonPath": "/usr/local/bin/python",  // Define your Python path
        "python.defaultInterpreterPath": "/usr/local/bin/python"
    },
    "postCreateCommand": "pip install -r requirements.txt",  // Optional: install dependencies from requirements.txt
    "forwardPorts": [8888],  // Open the Jupyter port if needed
    "remoteUser": "vscode"  // (Optional) User to run the container
}

